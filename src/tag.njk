---
pagination:
  data: collections
  size: 1
  alias: tag
  addAllPagesToCollections: false
  filter:
    - all
    - post
    - draft
eleventyComputed:
  title: "{{ tag }}"
permalink: /tag/{{ tag }}/
---

{% extends 'page.njk' %}

{% block body %}
  <p class="text-center text-sm italic mb-6">(פוסטים בתיוג <strong>{{tag}}</strong>.)</p>

  {% set posts = collections[tag] | reverse %}

  {% include "posts.njk" %}

  {% include "tags.njk" %}
{% endblock %}
