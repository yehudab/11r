{% macro commentsList(comments) %}
  <ul>
  {% for comment in comments %}
    <li>
      <p>מאת: {{ comment.name }}</p>
      <p>תאריך: {{ comment.date }}</p>
      <p>{{ comment.message }}</p>
      {% if comment.replies %}
        {{ commentsList(comment.replies) }}
      {% endif %}
    </li>
  {% endfor %}
  </ul>
{% endmacro %}

<div class="comments">
<h3>תגובות:</h5>
{{ commentsList(postComments) }}
</div>
