{% macro commentsList(comments) %}
  <ul>
  {% for comment in comments %}
    <li>
      <p>מאת: {% if comment.url %}<a href="{{ comment.url }}">{{ comment.name }}</a>{% else %}<span>{{ comment.name }}</span>{% endif %}</p>
      <p>תאריך: {{ comment.date | dateAndTime }}</p>
      <p>{{ comment.message }}</p>
      {% if comment.replies %}
        {{ commentsList(comment.replies) }}
      {% endif %}
    </li>
  {% endfor %}
  </ul>
{% endmacro %}

<div class="comments">
<h3>תגובות:</h5>
{{ commentsList(postComments) }}
</div>
