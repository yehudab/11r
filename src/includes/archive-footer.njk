<h3 class="block text-center text-xl mb-6">
  שנים נוספות
</h3>
<div class="grid grid-flow-row grid-cols-3 gap-4 mb-2">
    {% set years = collections | getYears %}
    {% for year in years %}
        <a class="tag mx-auto" href="{{ site.baseUrl }}archive/{{year.slag}}">{{year.year}}&rlm; ({{year.count}})</a>
    {% endfor %}
</div>