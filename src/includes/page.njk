<!DOCTYPE html>
<html lang="he" dir="rtl">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="canonical" href="{{ site.url }}{{ page.url }}" />

    {# Google Schema #}
    <meta itemprop="name" content="{% if metaTitle %}{{ metaTitle }}{{ ' | '}}{% endif %}{% if title %}{{ title }}{{ ' | '}}{% endif %}{% if site.name %}{{ site.name }}{% endif %}">
    <meta itemprop="description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">

    {# Twitter #}
    <meta name="twitter:title" content="{% if metaTitle %}{{ metaTitle }}{{ ' | '}}{% endif %}{% if title %}{{ title }}{{ ' | '}}{% endif %}{% if site.name %}{{ site.name }}{% endif %}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
    <meta name="twitter:site" content="{{ site.author.handle }}">
    <meta name="twitter:creator" content="{{ site.author.handle }}">
    <meta name="twitter:image:src" content="{% if ogImage %}{{ site.url }}{{ site.baseUrl }}{{ ogImage }}{% endif %}">

    {# Open Graph #}
    <meta property="og:title" content="{% if metaTitle %}{{ metaTitle }}{{ ' | '}}{% endif %}{% if title %}{{ title }}{{ ' | '}}{% endif %}{% if site.name %}{{ site.name }}{% endif %}">
    <meta property="og:description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
    <meta property="og:image" content="{% if ogImage %}{{ site.url }}{{ site.baseUrl }}{{ ogImage }}{% else %}{{ site.url }}{{ site.baseUrl }}img/2022/12/blog-image.webp{% endif %}">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:locale" content="he_il">
    <meta property="og:type" content="website">

    <link rel="icon" type="image/x-icon" href="{{ site.baseUrl }}favicon.ico?v=2"/>
    <link rel="apple-touch-icon" sizes="180x180" href="{{ site.baseUrl }}apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ site.baseUrl }}favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ site.baseUrl }}favicon-16x16.png">
    <link rel="manifest" href="{{ site.baseUrl }}site.webmanifest">

    <title>
      {% if metaTitle %}{{ metaTitle }}
      {% else %}{{ title }}
      {% endif %}
      {% if metaTitle or title %} | {% endif %}{{ site.name }}</title>

    <link rel="stylesheet" href="{{ site.baseUrl }}assets/main.bundle.css">

    {% block head %}{% endblock %}
  </head>
  <body class="flex flex-col min-h-screen">
    {% include 'header.njk' %}
    <main class="container mx-auto max-w-3xl p-8 grow">
      {% block body %}{% endblock %}
    </main>
    {% include 'footer.njk' %}
    {#% include 'privacy-notice.njk' %#}
    <script src="{{ site.baseUrl }}assets/lib/cash.js"></script>
    <script src="{{ site.baseUrl }}assets/main.bundle.js"></script>
    <script async src="https://ackee.yehudab.com/blog-utils.js" 
      data-ackee-server="https://ackee.yehudab.com"
      data-ackee-domain-id="9c5f49e5-e4a2-44dd-99bf-9f38e447246c"
      data-ackee-opts='{ "ignoreLocalhost": true, "detailed": true, "ignoreOwnVisits": true }'></script>
    <script async src="https://bringthemhomenow.net/1.0.8/hostages-ticker.js" 
      integrity="sha384-jQVW0E+wZK5Rv1fyN+b89m7cYY8txH4s3uShzHf1T51hdBTPo7yKL6Yizgr+Gp8C"
      crossorigin="anonymous"></script> 
  </body>
</html>